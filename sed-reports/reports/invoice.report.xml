<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="account.report_invoice_document">
            <t t-call="report.external_layout">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <div class="page">
              <div class="row">
                <div class="col-xs-6">

                </div>
                <div class="col-xs-6 text-right">
                  <h1>
                        <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                        <span t-if="o.type == 'out_refund'">Refund</span>
                        <span t-if="o.type == 'in_refund'">Supplier Refund</span>
                        <span t-if="o.type == 'in_invoice'">Supplier Invoice</span>
                 </h1>
                  <h1><small>
                         <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                        <span t-if="o.type == 'out_refund'">Refund</span>
                        <span t-if="o.type == 'in_refund'">Supplier Refund</span>
                        <span t-if="o.type == 'in_invoice'">Supplier Invoice</span>
                        #<span t-field="o.number"/>
                           </small>
                 </h1>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-6">
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <h4>Cliente</h4>
                    </div>
                    <div class="panel-body">
                            <address t-field="o.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                            <span t-if="o.partner_id.vat">Partita IVA: <span t-field="o.partner_id.vat"/><br /></span>
                            <span t-if="o.partner_id.fiscalcode">Codice Fiscale: <span t-field="o.partner_id.fiscalcode"/><br /></span>
                    </div>
                  </div>
                </div>
                <div class="col-xs-6 text-right">
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <h4>Totale Documento: <span t-field="o.amount_total" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/></h4>
                    </div>
                    <div class="panel-body">
                      <p>
                        <span t-if="o.date_invoice">Data: <span t-field="o.date_invoice"/><br /></span>
                        <span t-if="o.origin">Riferimento Documento: <span t-field="o.origin"/><br /></span>
                        <span t-if="o.partner_id.ref">Riferimento Cliente: <br t-field="o.partner_id.ref"/></span>
                        <span t-if="o.reference">Riferimento Fattura: <span t-field="o.reference"/><br /></span>
                        <span t-if="o.payment_term">Termini Pagamento: <span t-field="o.payment_term.name"/><br /></span>
                        <span t-if="o.date_due">Scadenza: <span t-field="o.date_due"/></span>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
              <t t-if="'siamm_intercettazioni' in o and o.siamm_intercettazioni">
                  <div class="row">
                    <div class="col-xs-12">
                        <blockquote>
                            <p>
                            <span t-if="o.siamm_nomemagistrato and o.siamm_cognomemagistrato">PM:
                                <span t-field="o.siamm_nomemagistrato"/>
                                <span t-field="o.siamm_cognomemagistrato"/>
                            </span>
                            <span t-if="o.siamm_ngrg">
                                , NRRG: <span t-field="o.siamm_ngrg"/> - <span t-field="o.siamm_registro"/>
                            </span>
                            <span t-if="o.siamm_datainizioprestazione and o.siamm_datafineprestazione">
                                , Servizio: dal <span t-field="o.siamm_datainizioprestazione"/> al <span t-field="o.siamm_datafineprestazione"/>
                                                </span>
                            </p>
                        </blockquote>
                    </div>
                  </div>
              </t>
              <!-- / end client details section -->
              <table class="table table-condensed">
                <thead>
                  <tr>
                    <th width="60%">
                      <h4>Prodotto e Descrizione</h4>
                    </th>
                    <th>
                      <h4>Quantità</h4>
                    </th>
                    <th>
                      <h4>Prezzo</h4>
                    </th>
                    <th>
                      <h4>Sconto</h4>
                    </th>
                    <th>
                      <h4>Imposte</h4>
                    </th>
                    <th>
                      <h4>Totale</h4>
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <tr t-foreach="o.invoice_line" t-as="l">
                    <td><span t-field="l.name"/></td>
                    <td>
                        <span t-field="l.quantity" t-field-options="{&quot;widget&quot;: &quot;float&quot;}"/>
                        <span t-field="l.uos_id" groups="product.group_uom"/>
                    </td>
                    <td class="text-right">
                        <span t-field="l.price_unit" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                    </td>
                    <td class="text-right" groups="sale.group_discount_per_so_line"><span t-field="l.discount" t-field-options="{&quot;widget&quot;: &quot;float&quot;}"/></td>
                    <td class="text-right">
                        <span t-esc="', '.join(map(lambda x: x.name, l.invoice_line_tax_id))"/>
                    </td>
                    <td class="text-right">
                        <span t-field="l.price_subtotal" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                    </td>
                </tr>
                </tbody>
              </table>
              <div class="row">
                <div class="col-xs-5">
                  <div t-if="o.tax_line" class="panel panel-info">
                    <div class="panel-heading">
                      <h4>Imposte</h4>
                    </div>
                    <div class="panel-body">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>
                              <strong>Imposta</strong>
                            </th>
                            <th>
                              <strong>Imponibile</strong>
                            </th>
                            <th>
                              <strong>Importo</strong>
                            </th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr t-foreach="o.tax_line" t-as="t">
                            <td><span t-field="t.name"/>
                            </td>
                            <td><span t-field="t.base" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/></td>
                            <td><span t-field="t.amount" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/></td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
                <div class="col-xs-2 col-xs-offset-3 text-right">
                  <p>
                    <strong>
                    Imponibile: <br />
                    Imposte: <br />
                    <h3>Totale: </h3><br />
                    </strong>
                  </p>
                </div>
                <div class="col-xs-2 text-right">
                  <strong>
                  <span t-field="o.amount_untaxed" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/><br />
                  <span t-field="o.amount_tax" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/><br />
                  <h3><span t-field="o.amount_total" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/></h3><br />
                  </strong>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <div class="span7">
                    <div class="panel panel-info">
                      <div class="panel-heading">
                        <h4>Note</h4>
                      </div>
                      <div class="panel-body">
                        <p>
                          Modalità di Pagamento:<br />
                          <t t-if="o.partner_bank_id">
                               <t t-set="bank" t-value="o.partner_bank_id"></t>
                          </t>
                          <span t-foreach="company.bank_ids" t-as="b">
                          Banca: <span t-field="b.bank_name"/> - IBAN: <span t-field="b.iban"/> BIC: <span t-field="b.bank_bic"/><br />
                          </span>
                        </p>
                        <span t-if="o.partner_id.credit">Ad oggi il suo debito nei nostri confronti inclusa la presente ammonta a
                            <span t-field="o.partner_id.credit" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                            <br />
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </t>
        </template>
    </data>
</openerp>